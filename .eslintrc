{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error"
  },
  "overrides": [
    {
      "files": ["*.test.*", "*.spec.*", "*.mock.*"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}